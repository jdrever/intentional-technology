{% set flatNavItems = collections.all | eleventyNavigation | flattenNavigationAndAddNextPrev %}

<div class="text-center">
{% for item in flatNavItems %}
  {% if item.url === page.url %}
    {% if item.prevTitle %}
      <a class="btn btn-primary" href="{{ item.prevUrl }}" role="button">
        &larr; PREVIOUS: {{ item.prevTitle }}
      </a>
    {% endif %}

    {% if item.nextTitle %}
      <a class="btn btn-primary" href="{{ item.nextUrl }}" role="button">
        NEXT: {{ item.nextTitle }} &rarr;
      </a>
    {% endif %}
  {% endif %}
{% endfor %}
</div>